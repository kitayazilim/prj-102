---
layout: layouts/base.njk
tags: hizmetler
eleventyNavigation:
  key: Hizmetlerimiz
  order: 2
  aka: hizmetler

urunler: Hizmetlerimiz
---

<section class="hero-wrap hero-wrap-2" style="height:300px; background-image: url('{{'/assets/images/urunler-bg.webp' | url}}');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text align-items-end justify-content-center" style="height:300px">
      <div class="col-md-9 ftco-animate pb-5 text-center">
        <p class="breadcrumbs">
          <span class="mr-2">
            <a href="/">
              <span class="lang" key="anasayfa">Anasayfa</span>
              <i class="fa fa-chevron-right"></i>
            </a>
          </span>
          <span class="lang" key="urunler">
            {{urunler}}
          </span>
        </p>
        <h1 class="mb-0 bread lang" key="urunler">{{urunler}}</h1>
      </div>
    </div>
  </div>
</section>

<section class="ftco-section bg-light">
  <div class="container">
    <div class="row d-flex">
      {% set urunler = collections.Urunler %}
      {%- for item in urunler -%}
        <div class="col-lg-4 ftco-animate">
          <div class="blog-entry">
            <a href="{{item.url | url}}" class="block-20" style="background-image: url('{{item.data.image | url}}');"></a>
            <div class="text d-block">
              <h3 class="heading">
                <a href="{{item.url | url}}">{{item.data.title}}</a>
              </h3>
              <p style="height:85px">{{item.data.kisaozet}}</p>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>